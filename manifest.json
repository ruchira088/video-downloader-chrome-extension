{
  "manifest_version": 2,
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["content.bundle.js"]
    }
  ],
  "permissions": ["storage", "cookies", "*://localhost/*", "*://*.ruchij.com/*"],
  "browser_action": {
    "default_popup": "config-page.html"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  }
}
