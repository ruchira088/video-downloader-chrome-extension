{
  "manifest_version": 3,
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content.bundle.js"
      ],
      "css": [
        "styles/content.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://*.localhost/*",
    "*://*.ruchij.com/*"
  ],
  "action": {
    "default_popup": "config-page.html"
  },
  "background": {
    "service_worker": "service-worker.bundle.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/download-icon.svg"
      ],
      "matches": [
        "https://*/*"
      ]
    },
    {
      "resources": [
        "icons/download-icon.svg"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
